    }
    function CompareChange() {
        if ($("#CompareParameter").val() != "3" && $("#CompareParameter").val() != "4") {
            $("#RangeParameter").val("");
            $("#RangeParameter").prop("disabled", true);
        }
        else {
            $("#RangeParameter").prop("disabled", false);
        }
    }

