       // ]
        );
        for (var d = 0; d < combineNameArr.length; d++) {
            formatter.format(data, d); // Apply formatter to second column.
        }
        var options = {
            title: 'Price Comparison',
         
            hAxis: {
                title: "Food Items",
                count: -1,
                viewWindowMode: 'pretty',
                slantedText: true,
                showTextEvery: 1
            },
            seriesType: "bars",
            series: { 5: { type: "line" } },
            vAxis: {
                title: "Average Price", format: '$#.##',
                baselineColor: "none"
