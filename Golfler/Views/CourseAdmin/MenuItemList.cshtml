@{
    ViewBag.Title = "Menu Items List";
    ViewBag.Module = "Menu Items List";
    Layout = "~/Views/Shared/_LayoutCourseArea.cshtml";
}

@Html.Partial("_jqGrid")
<style>
    .tempwidth {
        width: 40% !important;
    }

    .dropdownCate {
        border: 1px solid #eaeaea;
        float: left;
        padding: 3.5% 2%;
        width: 90%;
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        bindJqGridNoMultiSelect('list', 'pager', '/Golfler/CourseAdmin/GetSubCategoryList',
                ['ID', 'Category', 'Sub Category Name', 'Allow in Course'],
                [{ name: 'ID', index: 'ID', width: 10, hidden: true },
                    { name: 'Category', index: 'Category', width: 50, sortable: true },
                    { name: 'Name', index: 'Name', width: 50, formatter: SetEditLink, sortable: true },
                    { name: 'Status', index: 'Status', width: 50, sortable: true, formatter: SetActiveInActive, align: "center" }
                ], 'ID', 'desc',
                {
                    "searchText": (function () {
                        return $("#txtSearch").val();
                    }),
                    "category": (function () {
                        return ($("#ddlCategory").val() == "" ? '@TempData["MenuItemFilter"]' : $("#ddlCategory").val());
                    }),
                    "subCategory": (function () {
                        return ($("#ddlSubCategory").val() == "" ? "0" : $("#ddlSubCategory").val());
                    })

                }, '');

        $.ajax({
            type: "GET",
            url: '@Url.Action("GetCategory", "CourseAdmin")',
            async: false,
            success: function (data) {

                $('#ddlCategory').empty();
                $('#ddlCategory').append('<option value="">Select Category</option>');

                if (data.msg == 'success') {
                    for (var i = 0; i < data.data.length; i++) {
                        $('#ddlCategory').append('<option value="' + data.data[i].ID + '">' + data.data[i].Name + '</option>');
                    }
                    $('#ddlCategory').val('@TempData["MenuItemFilter"]');
                    getSubCategory('@TempData["MenuItemFilter"]');
                }
                else {
                    //Do nothing
                }
            }
        });

        $('#ddlCategory').change(function () {
            if ($(this).val() == '') {
                $('#ddlSubCategory').empty();
                $('#ddlSubCategory').append('<option value="">Select Sub Category</option>');
            }
            else {
                getSubCategory($(this).val());
            }
        });

    });

    function getSubCategory(cid) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetSubCategory", "CourseAdmin")',
            data: { catID: cid },
            async: false,
            success: function (data) {

                $('#ddlSubCategory').empty();
                $('#ddlSubCategory').append('<option value="">Select Sub Category</option>');

                if (data.msg == 'success') {
                    for (var i = 0; i < data.data.length; i++) {
                        $('#ddlSubCategory').append('<option value="' + data.data[i].ID + '">' + data.data[i].Name + '</option>');
                    }
                }
                else {
                    //Do nothing
                }
            }
        });
    }

    function SetEditLink(cellvalue, options, rowObject) {
        try {
            var Eid = rowObject["EID"];
            var type = rowObject["Type"];
            var Status = rowObject["Status"];

            if ($('#UpdateFlag').val() != "" && $('#UpdateFlag').size() != 0 && $('#UpdateFlag').val() != "True")
                return "<a href='javascript:void(0)' onclick=javascript:showActionInactMsg(); >" + cellvalue + "</a>";
            else {
                if (Status == "A")
                    return "<a href='/Golfler/CourseAdmin/MenuItemAddEdit/" + Eid + "' >" + cellvalue + "</a>";
                else
                    return "<a href='javascript:void(0)' onclick=javascript:showAlertMessage(); >" + cellvalue + "</a>";
            }
        }
        catch (ex) { alert(ex.message); }
    }

    function showAlertMessage() {
        showStickMessage('This food item is not active in this course. Please activate this food item by click on "Allow in Course" column.');
    }

    function showActionInactMsg() {
        showStickMessage('You are unautherized to perform this action.');
        return false;
    }


    function SetActiveInActive(cellvalue, options, rowObject) {
        try {
            var rowId = rowObject["ID"];
            var type = rowObject["Type"];

            var onclickCall = "";

            if (($('#UpdateFlag').size() != 0 && $('#UpdateFlag').val() != "True")) {
                onclickCall = 'onclick="javascript:return showActionInactMsg(); "';
            }
            else onclickCall = "onclick=javascript:UpdateRowStatus(" + rowId + ",&apos;" + cellvalue.trim() + "&apos;);";

            //if (cellvalue.trim() == "A" || cellvalue == true)
            //    return "<a href='#'><img " + onclickCall + " alt='" + cellvalue + "' title='click to deactivate' src='/Content/images/nw_active.png'/></a>";
            //else
            //    return "<a href='#'><img " + onclickCall + " alt='" + cellvalue + "' title='click to activate' src='/Content/images/nw_inactive.png'/></a>";

            if (cellvalue.trim() == "A" || cellvalue == true)
                return '<div class="selected-row"><div class="switch"><input id="cmn-toggle-' + rowId + '" class="cmn-toggle cmn-toggle-round" type="checkbox" ' + onclickCall + ' checked="checked"><label for="cmn-toggle-' + rowId + '"></label></div></div>';
            else
                return '<div class="selected-row"><div class="switch"><input id="cmn-toggle-' + rowId + '" class="cmn-toggle cmn-toggle-round" type="checkbox" ' + onclickCall + '><label for="cmn-toggle-' + rowId + '"></label></div></div>';
        }
        catch (ex) {
            alert(ex.message);
        }
    }

    function UpdateRowStatus(id, status) {
        try {
            //alert(id + ' - ' + status);
            UpdateStatus('UpdateFoodItemStatus', 'Golfler/CourseAdmin', id, status, 'list');
        }
        catch (ex) { alert(ex.message); }
    };
</script>
