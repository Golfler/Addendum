        var BusinessDbaName = $("#txtBTBusinessDbaName").val();
        var BusinessTaxId = $("#txtBTBusinessTaxId").val();
        var BusinessStreetAddress = $("#txtBTBusinessStreetAddress").val();
        var BusinessLocality = $("#txtBTBusinessLocality").val();
