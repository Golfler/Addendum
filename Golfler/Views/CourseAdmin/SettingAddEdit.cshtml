<script type="text/javascript">
    function Validate() {

        if ($('#UpdateFlag').size() != 0 && $('#UpdateFlag').val() != "True") {
            NonAccessMsg();
            return false;
        }


        var i = 0;
        $("#divSettings").find("input.red-border").each(function () {

            if ($(this).val() == "") {
                i = 1;
            }

        });

        if (i == 1) {
            alert("All fields are required.")
            return false;
        }
        else {
            $("#formSettings").submit();
        }

    }


</script>
