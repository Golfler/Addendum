<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head id="Head1">
    <title>@(String.IsNullOrEmpty(Golfler.Models.LoginInfo.CourseName) ? @Golfler.Models.Params.SiteHeaderTitle + " - " + @ViewBag.Title : @Golfler.Models.Params.SiteHeaderTitle + " - " + @Golfler.Models.LoginInfo.CourseName + " - " + @ViewBag.Title)
    </title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="@Url.Content("~/content/css/admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/content/css/jquery.toastmessage.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.toastmessage.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            if ($('#lblErrorMessage').text() != "") {
                showStickMessage($('#lblErrorMessage').text());
                $('#lblErrorMessage').text('');
            }
            if ($('#lblMessage').text() != "") {
                showMessage($('#lblMessage').text());
                $('#lblMessage').text('');
            }
        });
        function showMessage(msg) {
            if (msg != null && msg.length > 0)
                $().toastmessage('showToast', {
                    text: msg,
                    sticky: false,
                    stayTime: 2000,
                    position: 'top-right',
                    type: 'success'
                });
        }

        function showStickMessage(msg) {
            if (msg != null && msg.length > 0)
                $().toastmessage('showToast', {
                    text: msg,
                    sticky: true,
                    stayTime: 2000,
                    position: 'top-right',
                    type: 'error'
                });
        }
    </script>
</head>
<body>
    <label id="lblMessage" style="display: none;">@ViewBag.Message</label>
    <label id="lblErrorMessage" style="display: none;">@ViewBag.ErrorMessage</label>
    @RenderBody()
</body>
</html>
